body #q-app
    font-family Montserrat-Regular
    background #e4e9ef;

.modal-backdrop {
    background: rgba(0, 0, 0, 0.1);
}

.modal-content {
    color: #4a4a4a;
    box-shadow: none;
}

button.q-btn {
    box-shadow: none;
    font-family: Montserrat-Bold;
}

button.q-btn.disabled,
button.q-btn[disabled] {
    opacity: 0.3!important;
}

.text-blueish {
  color: #1e3c57;
}

.q-input.bg-blueish {
  background: #33597b;
}

.bg-blueish {
  backgroud: #1e3c57;
}

.text-cyan {
  color: #78d2e6;
}

.bg-cyan {
  background: #78d2e6;
}

.text-orange {
    color: #fabc57;
}

.bg-orange {
    background: #fabc57;
}

.modal-header {
  color: #4a4a4a;
}

.q-notifications > div.column {
  display: flex
}

.wizard-header, .wizard-icon-circle, .wizard-nav, .wizard-progress-with-circle{
  display: none;
    visibility: hidden;
}

.layout-wrapper {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding-top: 2.5rem;
  padding-bottom: 5rem;
  position: relative;
  color: white;
}

.q-pull-to-refresh-wrapper .layout-wrapper {
  padding-top: 0;
  height: calc(100vh - 2.5rem);
}

.layout-wrapper > div,
.setup-wrapper {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.layout-wrapper > div > section:last-of-type {
  flex-grow: 1;
}

.layout-wrapper.no-footer {
    height: 100vh;
    padding-bottom: 0;
}

.q-layout-header,
.q-layout-footer,
.q-btn-group,
{
    box-shadow: none;
}

.setup-wrapper,
.center-content-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  padding: 0 0.5em;
}

.container {
    width: 100%;
}

.q-btn.disabled {
    opacity: 0.2 !important;
}

.wizard-nav.wizard-nav-pills,
.wizard-header,
.wizard-progress-with-circle {
  display: none;
}

h1.setup {
  text-align: center;
  font-weight: bold;
  margin-top: 0;
}

h4.setup {
  text-align: center;
  margin: 0.5em auto;
}

p.setup {
  text-align: center;
}

.btns-wrapper {
  display: flex;
  justify-content: center;
  margin-top: 1rem;
  justify-content: space-around;
}

.layout-shape {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.layout-shape {
  height: 100%;
  margin: 0 .5em;
  border-top-right-radius: 0.5em;
  border-top-left-radius: 0.5em;
  color: #252525;
}

.layout-shape > div {
  width: 100%;
  height: 100%;
}

.shrinked .layout-shape {
  overflow: hidden;
  /* padding: .25rem .25rem .25rem .25rem */
}

